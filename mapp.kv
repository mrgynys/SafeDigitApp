<MyLayout>:
    canvas.before:
        Color:
            rgba: 111, 115, 120, 0.1
        Rectangle:
            pos: self.pos
            size: self.size
    
    orientation: 'vertical'

    ScrollView:
        Label:
            font_size: "20sp"
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            text: root.data_label
            color: 1,1,1,0.8
            markup: True

    TextInput:
        id: Inp
        multiline: False
        padding_y: (5, 5)
        size_hint: (1, 0.2)

    Button:
        font_size: "20sp"
        text: "Отправить"
        bold: True
        background_color: '#00CED1'
        size_hint: (1, 0.2)
        on_press: root.callback()